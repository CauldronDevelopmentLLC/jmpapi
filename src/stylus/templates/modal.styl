.modal
  position absolute
  left 0
  right 0
  width 500px
  margin auto
  background #fff
  border-radius 3px
  border 2px solid #888
  z-index 110
  text-align left
  font-size 12pt
  white-space normal

  .modal-header, .modal-body, .modal-footer
    padding 1em

  .modal-header, .modal-footer
    white-space nowrap

  .modal-header
    font-weight bold
    background-color #f3f3f3
    border-bottom 1px solid #eee
    border-top-left-radius 3px
    border-top-right-radius 3px

  .modal-footer
    text-align right

    button
      margin-left 0.5em
      text-transform capitalize

.modal-overlay
  background-color rgba(0, 0, 0, 0.3)
  z-index 100
  position fixed
  top 0
  left 0
  width 100%
  height 100%
