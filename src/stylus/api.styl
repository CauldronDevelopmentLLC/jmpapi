@import 'templates/common.styl'

body
  overflow-y scroll

.api-title
  text-align center

.api-category
  &.opened
    margin-bottom 3em

  .fa
    margin-right 0.5em

  .api-category-title
    font-weight bold
    font-size 150%
    cursor pointer
    border-bottom 1px solid #ddd

.api-endpoint
  .api-method
    color #444
    border 1px solid #ddd
    background #fff
    border-radius 4px
    margin-bottom 2px

    &.opened
      margin-bottom 1.5em

    > div
      padding 0.25em

    .api-path
      border-top-left-radius 4px
      border-top-right-radius 4px
      background #f5f5f5
      font-weight bold
      font-size 110%
      cursor pointer

    .api-args
      width 100%
      border-collapse collapse

      th, td
        padding 0.25em
        border 1px solid #ddd
        white-space nowrap
        text-align left
        vertical-align top

      td.description
        white-space normal

      th
        font-size 90%

      td:first-child, th:first-child
        border-left 0

      td:last-child, th:last-child
        border-right 0

      .description
        width 100%

    .api-example
      padding 0

      pre
        line-height 1.5em
        background #f5f5f5
        padding 0.25em
        margin 0
        font-family mono
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px
        width 100%
        overflow-x auto
        box-sizing border-box
