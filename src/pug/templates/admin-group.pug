script#admin-group-template(type="text/x-template")
  .admin-group
    h2
      .back
        .fa.fa-arrow-left(@click="back", title="Return to main page")
      | Editing Group {{group}}

    h2(v-if="!users.length") No members.
    .members(v-if="users.length")
      h2 Members
      table
        thead
          tr
            th Avatar
            th User
            th Actions

        tbody
          tr(v-for="user in users")
            td.avatar: img(:src="user.avatar")
            td.name {{user.name}}
            td.actions
              .fa.fa-minus(@click="remove_user(user)",
                title="Remove user from group.")
