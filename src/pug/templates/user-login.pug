script#user-login-template(type="text/x-template")
  .user-login
    .login(v-if="!loggedin && providers.length")
      | Login with:
      .fa(v-for="provider in providers", :class="'fa-' + provider",
        @click="login(provider)", :title="'Login with ' + provider + '.'")

    .login-menu(v-if="loggedin")
      img.avatar(:src="user.avatar", :title="'Logged in as ' + user.name + '.'")
      .fa.fa-sign-out(@click="logout", title="Sign out.")
