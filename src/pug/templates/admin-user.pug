script#admin-user-template(type="text/x-template")
  .admin-user
    h2
      .back
        .fa.fa-arrow-left(@click="back", title="Return to main page")
      | Editing User
      img(:src="user.avatar")
      | {{user.name}}

    table.user
      tr
        th Email
        td: a(:href="'mailto:' + user.email") {{user.email}}
      tr
        th Created
        td {{user.created}}
      tr
        th Last Seen
        td {{user.last_used}}
      tr
        th Provider
        td {{user.provider}}

    table
      thead
        tr
          th Group
          th Status
          th Actions

      tbody
        tr(v-for="group in groups")
          td.group {{group.name}}
          td.status {{group.member ? 'Member' : 'Nonmember'}}
          td.actions
            .fa.fa-minus(v-if="group.member", @click="remove_group(group)",
              title="Remove user from group")
            .fa.fa-plus(v-if="!group.member", @click="add_group(group)",
              title="Add user to group")
